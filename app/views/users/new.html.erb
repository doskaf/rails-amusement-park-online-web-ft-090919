<h1>Sign Up</h1><br>

<%= form_for @user do |f| %>
    Name: <%= f.text_field :name %><br>
    <br>
    Password: <%= f.password_field :password %><br>
    <br>
    Current level of nausea: <%= f.number_field :nausea %><br>
    <br>
    Current level of happiness: <%= f.number_field :happiness %><br>
    <br>
    Number of tickets: <%= f.number_field :tickets %><br>
    <br>
    Height: <%= f.number_field :height %><br>
    <br>
    Are You A Park Admin?: <%= f.check_box :admin %><br>
    <br>
    <%= f.submit "Create User" %>
<% end %>