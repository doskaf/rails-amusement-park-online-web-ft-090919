<% if current_user.admin %>
    <%= link_to "View #{@attraction.name}", attraction_path(@attraction) %><br>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %><br>
<% end %>

<%= @attraction.name %><br>


<%= form_tag("/rides", method: "post") do %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :attraction_id, @attraction.id %>
    <%= button_tag "Go on this ride" if !current_user.admin %>
<% end %>