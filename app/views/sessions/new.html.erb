
<h1>Sign In</h1>
<%= form_tag(signin_path) do %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <h3>Select a User:</h3>
  <%= collection_select(:user, :name, @users, :name, :name) %><br>
  <br>
  <h3>Password: <%= password_field_tag :password %></h3>
  <br>
  <%= submit_tag "Sign In" %>
<% end %>